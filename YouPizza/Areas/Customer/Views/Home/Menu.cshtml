@model IEnumerable<YouPizza.Model.Product>
@{
    Layout = "_Layout";
}
<div class="container ">
    <div class="text-center">
        
        <ul class="text-decoration-none list-inline ">

            @foreach (var item in ViewBag.categories)
            {

                <li col-2 class="list-inline-item m-lg-5">
                    <a asp-action="Menu" asp-route-Id="@item.Id" class="text-decoration-none ">@item.Name </a>
                </li>

            }
        </ul>
    </div>
</div>
@foreach (var item in Model)
{
    <div class=" rounded-3 mb-4">
        
        <div class="card-body border-0 p-4">
            <div class="row d-flex justify-content-between align-items-center">
                <div class="col-md-2 col-lg-2 col-xl-2">
                    <img
                        src="@item.ImageUrl"
                        class="img-fluid rounded-3" alt="Cotton T-shirt">
                </div>
                <div class="col-md-1 col-lg-1 col-xl-1">
                    <p class="lead fw-normal mb-2">@item.Name</p>
                </div>
                <div class="col-md-4 col-lg-4 col-xl-4 ">
                    <p class="text-black"> @item.Description</p>
                </div>
                <div class="col-md-2 col-lg-2 col-xl-2 ">
                    <h5 class="mb-0">@item.Price.ToString("C")</h5>
                </div>
                <div class="col-md-2 col-lg-2 col-xl-2 ">
                    <a asp-controller="Cart" asp-action="Add" asp-area="Customer" asp-route-id="@item.Id"  class="btn btn-primary mx-2"> Add To Basket </a>

                </div>
            </div>
        </div>
    </div>
}