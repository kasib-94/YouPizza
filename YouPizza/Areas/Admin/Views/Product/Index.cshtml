@model IEnumerable<YouPizza.Model.Product>

<br/>
<br/>
<div class="border p-4 bg-white">
    <div class="row">
        <div class="col-8">
            <h2 class="text-info"> Product List</h2>
        </div>

        <div class=" col-2 text-right">
            <a asp-action="Upsert" class="btn btn-info form-control"> Create Neww </a>
        </div>
    </div>
    <br/>
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        Name
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Authors
                    </th>
               
                    <th>
                        Price
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Description
                        </td>
                        <td>
                            @item.Category.Name
                        </td>
                        <td>
                            @{
                                var ingriredients = "";
                            }
                            @foreach (var ingr in item.IngredientsProduct)
                            {
                                ingriredients += @ingr.Ingredients.Name + ", ";
                            }
                            @ingriredients.Trim().TrimEnd(',')
                        </td>
                        <td>
                            @item.Price
                        </td>
                        <td>
                            <a class="btn btn-primary text-white" asp-action="Upsert" asp-route-Id="@item.Id">
                                Edit
                            </a>
                            <a class="btn btn-info text-white" asp-action="Details" asp-route-Id="@item.Id">
                                Details
                            </a>
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-Id="@item.Id">
                                Delete
                            </a>
                            <a class="btn btn-success text-white" asp-action="ManageIngredients" asp-route-Id="@item.Id">
                                Ingriedients
                            </a>

                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No Products Yet ...</p>
        }
    </div>
</div>