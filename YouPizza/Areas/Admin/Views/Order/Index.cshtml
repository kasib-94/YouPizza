@model YouPizza.Model.ViewModel.OrderVM

@{
    Layout = "_Layout";

}

<div class="container ">
    <div class="text-center">

        <ul class="text-decoration-none list-inline ">


            <li col-2 class="list-inline-item m-lg-3">
                <button onclick=loadTable(`All`) class="btn btn-primary ">All orders </button>
            </li>
            <li col-2 class="list-inline-item m-lg-3">
                <button onclick=loadTable(`Paid`) class="btn btn-primary ">Paid </button>
            </li>
            <li col-2 class="list-inline-item m-lg-3">
                <button onclick=loadTable(`Pending`) class="btn btn-primary ">Pending </button>
            </li>
        </ul>
    </div>

</div>
<div class=" d-flex col-4 container justify-content-between my-2 ">
    <label> Add Date Range </label>
    <input type="checkbox" id="myCheck" onclick=myFunction()>
</div>


    <div class="col-6 column container mb-3 " id="dateBlock" style="display: none">
        <div class="d-flex justify-content-between my-1">
            <label asp-for="@Model.Min"> Date From:</label>
            <input asp-for="@Model.Min" id="dateMin" type="datetime-local">
        </div>
        <div class="d-flex justify-content-between my-1">
            <label asp-for="@Model.Max"> Date Till: </label>
            <input asp-for="@Model.Max" id="dateMax" type="datetime-local">
        </div>
       
    </div>


<table id="table_id" class="table table-bordered table-striped" style="width:100%">
    <thead>
    <tr>
        <th>Name </th>
        <th>StreetAdress </th>
        <th> TotalPrice </th>
        <th>TimeCreated</th>
        <th>PhoneNumber</th>
    </tr>
    </thead>

</table>

@section Scripts
{
    <script src="~/js/order.js"></script>

}